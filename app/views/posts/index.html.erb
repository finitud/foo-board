<h1>Board</h1>

<ul class="posts">
  <%= link_to 'Add Post', new_post_path %>
  <% @posts.reverse.each do |post| %>
    <li class="post">
      <div class="post-header">
        <h2>#<%= post.id %></h2>
      </div>
      <div class="post-body">
        <%= post.content %>
        <div class="post-timestamp"> <%= post.created_at %> </div>
      </div>
    </li>
  <% end %>
</ul>
